generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id           Int           @id @default(autoincrement())
  nom          String
  prenom       String
  email        String        @unique
  motDePasse   String
  achats       AchatPass[]   // Relation avec les pass achet√©s
  createdAt    DateTime      @default(now())
}

model Pass {
  id           Int           @id @default(autoincrement())
  nom          String
  prix         Float
  description  String
  duree        Int           // en jours
  photo        String        // URL ou chemin de l'image
  achats       AchatPass[]   // Relation avec les utilisateurs
}

model AchatPass {
  id            Int          @id @default(autoincrement())
  utilisateur   Utilisateur  @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int
  pass          Pass         @relation(fields: [passId], references: [id])
  passId        Int
  dateAchat     DateTime     @default(now())
}

model Artiste {
  id            Int          @id @default(autoincrement())
  nom           String
  genreMusical  String
  album         String
  description   String?
  photo         String       // URL ou chemin vers la photo
}
