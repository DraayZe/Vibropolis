generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id         Int         @id @default(autoincrement())
  nom        String
  prenom     String
  email      String      @unique
  motDePasse String
  createdAt  DateTime    @default(now())
  isAdmin    Boolean     @default(false)
  achats     AchatPass[]
}

model Pass {
  id     Int         @id @default(autoincrement())
  nom    String
  prix   Float
  duree  Int
  photo  String?
  dates  String?
  achats AchatPass[]
}

model AchatPass {
  id            Int         @id @default(autoincrement())
  utilisateurId Int
  passId        Int
  dateAchat     DateTime    @default(now())
  pass          Pass        @relation(fields: [passId], references: [id])
  utilisateur   Utilisateur @relation(fields: [utilisateurId], references: [id])

  @@index([passId], map: "AchatPass_passId_fkey")
  @@index([utilisateurId], map: "AchatPass_utilisateurId_fkey")
}

model Artiste {
  id              Int      @id @default(autoincrement())
  nom             String
  description     String   @db.VarChar(900)
  photo           String
  datePerformance DateTime
  couleur         String?
  instagram       String?
  spotify         String?
  tiktok          String?
  youtube         String?
  albums          Album[]
}

model Album {
  id         Int      @id @default(autoincrement())
  titre      String
  dateSortie DateTime
  artisteId  Int
  photo      String?
  artiste    Artiste  @relation(fields: [artisteId], references: [id])

  @@index([artisteId], map: "Album_artisteId_fkey")
}
