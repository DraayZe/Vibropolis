    generator client {
      provider = "prisma-client-js"
    }

    datasource db {
      provider = "mysql"
      url      = env("DATABASE_URL")
    }

    model Utilisateur {
      id           Int           @id @default(autoincrement())
      nom          String
      prenom       String
      email        String        @unique
      motDePasse   String
      achats       AchatPass[]   // Relation avec les pass achet√©s
      createdAt    DateTime      @default(now())
    }

    model Pass {
      id           Int           @id @default(autoincrement())
      nom          String
      prix         Float
      duree        Int
      photo        String?
      dates        String?
      achats       AchatPass[]   // Relation avec les utilisateurs
    }

    model AchatPass {
      id            Int          @id @default(autoincrement())
      utilisateur   Utilisateur  @relation(fields: [utilisateurId], references: [id])
      utilisateurId Int
      pass          Pass         @relation(fields: [passId], references: [id])
      passId        Int
      dateAchat     DateTime     @default(now())
    }

    model Artiste {
      id               Int      @id @default(autoincrement())
      nom              String
      albums           Album[]  // Relation: un artiste peut avoir plusieurs albums
      description      String   @db.VarChar(500)
      photo            String
      datePerformance  DateTime
      couleur          String?
      instagram        String?
      youtube          String?
      spotify          String?
      tiktok           String?
    }

    model Album {
      id         Int     @id @default(autoincrement())
      titre      String
      dateSortie DateTime
      artiste    Artiste @relation(fields: [artisteId], references: [id])
      artisteId  Int
      photo      String?
    }

